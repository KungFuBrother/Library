<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/navigation_bar_background"
    android:orientation="vertical">

    <View
        android:id="@+id/container_title_status"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bar_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/container_title_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/navigation_bar_title_size" />

        <ImageView
            android:id="@+id/container_title_back"
            android:layout_width="@dimen/navigation_bar_height"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

    </LinearLayout>

</LinearLayout>